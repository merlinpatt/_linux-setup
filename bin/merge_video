#!/bin/zsh

POSITIONAL=()
while [[ $# -gt 0 ]]
do
key="$1"
case $key in
    -x|--execute)
        REAL_RUN=1
        shift # past argument
        ;;
    -n|--name)
	name=$2
	shift; shift;
	;;
    *) # unknown
	echo "file '$1'" >> input.txt
        POSITIONAL+=("$1")
        shift # past argument
        ;;
esac
done

echo 'Contents of input.txt'
echo '---------------------'
cat input.txt
echo '---------------------'
echo ''
echo 'ffmpeg -safe 0 -f concat -i input.txt -c copy $name'

if [[ $REAL_RUN ]];
then
    ffmpeg -safe 0 -f concat -i input.txt -c copy $name
fi
