#!/bin/bash

POSITIONAL=()
while [[ $# -gt 0 ]]
do
key="$1"

case $key in
    -x|--execute)
        REAL_RUN=1
        shift # past argument
        ;;
    -d|--directoryNesting)
        NESTED=1
        shift;
        ;;
    *) # unknown
	POSITIONAL+=("$1") # save it in an array for later
        shift # past argument
        ;;
esac
done

if [ $NESTED ]; then

for file in */*; do
    newFile=$(echo $file | awk '{for(i=1;i<=NF;i++){ $i=toupper(substr($i,1,1)) substr($i,2) }}1' );
    echo "mv [$file] [$newFile]";
    if [[ $REAL_RUN ]];
    then
        mv "$file" "$newFile"
    fi
done
    
else

for file in *; do
    newFile=$(echo $file | awk '{for(i=1;i<=NF;i++){ $i=toupper(substr($i,1,1)) substr($i,2) }}1' );
    echo "mv [$file] [$newFile]";
    if [[ $REAL_RUN ]];
    then
	mv "$file" "$newFile"
    fi
done

fi
