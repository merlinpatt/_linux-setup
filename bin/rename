#!/bin/zsh

POSITIONAL=()
while [[ $# -gt 0 ]]
do
  key="$1"
  case $key in
    -x|--execute)
      REAL_RUN=1
      shift # past argument
      ;;
    -s|--searchString)
      searchString=$2
      shift; shift
      ;;
    -r|--replacementString)
      replacementString=$2
      shift; shift
      ;;
    -d|--directoryNesting)
      NESTED=1
      shift;
      ;;
    *) # unknown
      POSITIONAL+=("$1") # save it in an array for later
      shift # past argument     
      ;;
  esac
done

echo "sed -E s/[$searchString]/[$replacementString]/";    

renameSingleFile () {
  local "${@}"
  local file=${file}

  newFile=$(echo $file | sed -E "s/$searchString/$replacementString/");
  echo "mv [$file]";
  echo "   [$newFile]";
  if [[ $REAL_RUN ]];
  then
    mv "$file" "$newFile"
  fi
}

if [ $NESTED ]; then
  for file in */*; do
    renameSingleFile file="$file"
  done
else
  for file in *; do
    renameSingleFile file="$file"
  done
fi
